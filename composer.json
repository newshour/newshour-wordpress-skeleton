{
    "name": "newshour/wp-project-skeleton",
    "type": "project",
    "license": "MIT",
    "description": "Wordpress project skeleton based off the Bedrock project.",
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        },
        {
            "type": "vcs",
            "url": "git@github.com:newshour/wp-core-theme-components.git"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.4",
        "nesbot/carbon": "^2.19",
        "oscarotero/env": "^2.1",
        "roots/wordpress": "^5.8.1",
        "roots/wp-config": "1.0.0",
        "roots/wp-password-bcrypt": "1.0.0",
        "vlucas/phpdotenv": "^5.3",
        "newshour/wp-core-theme-components": "^1.0.0",
        "wpackagist-plugin/advanced-custom-fields": "^5.10.1",
        "wpackagist-plugin/classic-editor": "^1.0",
        "wpackagist-plugin/debug-bar": "^1.1",
        "wpackagist-plugin/wp-mail-smtp": "^3.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.0.2",
        "roave/security-advisories": "dev-master"
    },
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "web/app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "web/app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "web/wp"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "tests": [
            "vendor/bin/phpunit --bootstrap vendor/autoload.php web/app/themes/core/src/Tests",
            "phpcs --standard=psr1 ./web/app/themes/"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\Themes\\CoreTheme\\": "web/app/themes/core/src"
        }
    }
}
